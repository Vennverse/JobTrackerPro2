# AutoJobr Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
# Alternative for managed services like Supabase, Neon, or PlanetScale
# DATABASE_URL=postgresql://user:pass@host.region.aws.neon.tech/dbname
# DATABASE_URL=postgresql://user:pass@host.region.postgres.vercel-storage.com/dbname

# Server Configuration  
NODE_ENV=production
PORT=5000

# Authentication & Session
SESSION_SECRET=your-super-secure-session-secret-here-at-least-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-here-at-least-32-characters
NEXTAUTH_URL=https://yourdomain.com

# Replit Auth (if using Replit)
REPLIT_USER_ID=your-replit-user-id
REPLIT_USER_NAME=your-replit-username

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# GitHub OAuth (for authentication)  
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# LinkedIn OAuth (for authentication)
LINKEDIN_CLIENT_ID=your-linkedin-oauth-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-oauth-client-secret

# AI Services
GROQ_API_KEY=your-groq-api-key-for-ai-analysis
OPENAI_API_KEY=your-openai-api-key-backup

# External Job APIs (Optional)
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_APP_KEY=your-adzuna-app-key

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Email Service Alternative (Resend)
RESEND_API_KEY=your-resend-api-key

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# File Storage (for production deployments)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-for-resumes

# Security & CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# Monitoring & Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ID=your-google-analytics-id

# Rate Limiting & Redis (Optional)
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Domain & SSL
DOMAIN=yourdomain.com
SSL_ENABLED=true