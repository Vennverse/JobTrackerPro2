{
  "manifest_version": 3,
  "name": "AutoJobr - Job Application Assistant",
  "version": "1.0.0",
  "description": "Automate job applications with smart form filling and real-time job matching analysis.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.icims.com/*",
    "https://*.linkedin.com/*",
    "https://*.bamboohr.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.jobvite.com/*",
    "https://*.smartrecruiters.com/*",
    "http://localhost:*/*",
    "https://*.replit.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.icims.com/*",
        "https://*.linkedin.com/*",
        "https://*.bamboohr.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.jobvite.com/*",
        "https://*.smartrecruiters.com/*"
      ],
      "js": ["lib/compromise.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoJobr Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}